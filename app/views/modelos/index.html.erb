<p id="notice"><%= notice %></p>

<h1>Modelos</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modelos.each do |modelo| %>
      <tr>
        <td><%= modelo.codigo %></td>
        <td><%= modelo.nome %></td>
        <td><%= link_to 'Mostrar', modelo, :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Editar', edit_modelo_path(modelo), :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Deletar', modelo, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Modelo', new_modelo_path, :class => 'btn btn-outline-primary btn-sm' %>
