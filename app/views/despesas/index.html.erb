<p id="notice"><%= notice %></p>

<h1>Despesas</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Nome</th>
      <th>Valor</th>
      <th>Obs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @despesas.each do |despesa| %>
      <tr>
        <td><%= despesa.data %></td>
        <td><%= despesa.nome %></td>
        <td><%= despesa.valor %></td>
        <td><%= despesa.obs %></td>
        <td><%= link_to 'Mostrar', despesa, :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Editar', edit_despesa_path(despesa), :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Deletar', despesa, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Despesa', new_despesa_path, :class => 'btn btn-outline-primary btn-sm' %>
