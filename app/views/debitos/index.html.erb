<p id="notice"><%= notice %></p>

<h1>Debitos</h1>

<table>
  <thead>
    <tr>
      <th>Compra</th>
      <th>Qtd parcelas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debitos.each do |debito| %>
      <tr>
        <td><%= debito.compra %></td>
        <td><%= debito.qtd_parcelas %></td>
        <td><%= link_to 'Mostrar', debito, :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Editar', edit_debito_path(debito), :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Deletar', debito, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Debito', new_debito_path, :class => 'btn btn-outline-primary btn-sm' %>
