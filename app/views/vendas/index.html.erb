<p id="notice"><%= notice %></p>

<h1>Vendas</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Valor venda</th>
      <th>Dinheiro</th>
      <th>Cartao</th>
      <th>Nota</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendas.each do |venda| %>
      <tr>
        <td><%= venda.data.strftime("%d/%m/%Y") %></td>
        <td><%= venda.valor_venda %></td>
        <td><%= venda.dinheiro %></td>
        <td><%= venda.cartao %></td>
        <td><%= venda.nota %></td>
        <td><%= link_to 'Mostrar', venda, :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Editar', edit_venda_path(venda), :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Deletar', venda, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Venda', new_venda_path, :class => 'btn btn-outline-primary btn-sm' %>
