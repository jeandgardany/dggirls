<p id="notice"><%= notice %></p>

<h1>Compras</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Fornecedor</th>
      <th>Produto</th>
      <th>Valor</th>
      <th>Pagamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compras.each do |compra| %>
      <tr>
        <td><%= compra.data %></td>
        <td><%= compra.fornecedor.nome %></td>
        <td><%= compra.produto %></td>
        <td><%= valor_formatado(compra.valor) %></td>
        <td><%= compra.pagamento %></td>
        <td><%= link_to 'Mostrar', compra, :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Editar', edit_compra_path(compra), :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Deletar', compra, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Compra', new_compra_path, :class => 'btn btn-outline-primary btn-sm' %>
