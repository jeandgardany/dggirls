<p id="notice"><%= notice %></p>

<p>
  <strong>Data Entrega:</strong>
  <%= @entrega_estampa.data.strftime("%d/%m/%Y") %>
</p>

<p>
  <strong>Data da entrega do Pacote:</strong>
  <%= @entrega_estampa.estampa.data %>
</p>

<p>
<strong>Qtd Entregue:</strong>
  <%= @entrega_estampa.qtd_entregue %>
</p>

<p>
  <strong>Valor:</strong>
  <%= valor_formatado(@entrega_estampa.valor) %>
</p>

<p>
  <strong>Costura:</strong>
  <%= @entrega_estampa.costura.faccao %>
</p>

<p>
  <strong>Obs:</strong>
  <%= @entrega_estampa.obs %>
</p>

<p>
  <strong>Perdas:</strong>
  <%= @entrega_estampa.perdas %>
</p>

<%= link_to 'Editar', edit_entrega_estampa_path(@entrega_estampa), :class => 'btn btn-outline-primary btn-sm' %> |
<%= link_to 'Voltar', entrega_estampas_path, :class => 'btn btn-outline-primary btn-sm' %>
