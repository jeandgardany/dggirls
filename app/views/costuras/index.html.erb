<p id="notice"><%= notice %></p>

<h1>Costuras</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Faccao</th>
      <th>Corte</th>
      <th>Qtd total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @costuras.each do |costura| %>
      <tr>
        <td><%= costura.data.strftime("%d/%m/%Y") %></td>
        <td><%= costura.faccao %></td>
        <td><%= costura.corte.data.strftime("%d/%m/%Y") %></td>
        <td><%= costura.qtd_total %></td>
        <td><%= link_to 'Mostrar', costura, :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Editar', edit_costura_path(costura), :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Deletar', costura, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Costura', new_costura_path, :class => 'btn btn-outline-primary btn-sm' %>
