<p id="notice"><%= notice %></p>

<h1>Pag Parcelas</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Pago</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pag_parcelas.each do |pag_parcela| %>
      <tr>
        <td><%= pag_parcela.data.strftime("%d/%m/%Y") %></td>
        <td><%= pag_parcela.pago %></td>
        <td><%= link_to 'Mostrar', pag_parcela %></td>
        <td><%= link_to 'Editar', edit_pag_parcela_path(pag_parcela) %></td>
        <td><%= link_to 'Deletar', pag_parcela, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

