<p id="notice"><%= notice %></p>

<h1>Caixas</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Compra</th>
      <th>Despesa</th>
      <th>Venda</th>
      <th>Costura</th>
      <th>Corte</th>
      <th>Total entradas</th>
      <th>Total saidas</th>
      <th>Saldo</th>
      <th>Extras</th>
      <th>Obs</th>
      <th>Total perdas</th>
      <th>Estampa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caixas.each do |caixa| %>
      <tr>
        <td><%= caixa.data %></td>
        <td><%= caixa.compra %></td>
        <td><%= caixa.despesa %></td>
        <td><%= caixa.venda %></td>
        <td><%= caixa.costura %></td>
        <td><%= caixa.corte %></td>
        <td><%= caixa.total_entradas %></td>
        <td><%= caixa.total_saidas %></td>
        <td><%= caixa.saldo %></td>
        <td><%= caixa.extras %></td>
        <td><%= caixa.obs %></td>
        <td><%= caixa.total_perdas %></td>
        <td><%= caixa.estampa %></td>
        <td><%= link_to 'Mostrar', caixa, :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Editar', edit_caixa_path(caixa), :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Deletar', caixa, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Caixa', new_caixa_path %>
