<p id="notice"><%= notice %></p>

<h1>Fornecedores</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereco</th>
      <th>Vendedor</th>
      <th>Fone</th>
      <th>Ativo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fornecedors.each do |fornecedor| %>
      <tr>
        <td><%= fornecedor.nome %></td>
        <td><%= fornecedor.endereco %></td>
        <td><%= fornecedor.vendedor %></td>
        <td><%= fornecedor.fone %></td>
        <td><%= fornecedor.ativo %></td>
        <td><%= link_to 'Mostrar', fornecedor, :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Editar', edit_fornecedor_path(fornecedor), :class => 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Deletar', fornecedor, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Fornecedor', new_fornecedor_path, :class => 'btn btn-outline-primary btn-sm' %>
